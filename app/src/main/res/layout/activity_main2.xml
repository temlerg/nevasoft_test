<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgra"
    tools:context="Main2Activity">

    <TextView
        android:id="@+id/textView4"
        style="@style/NumButton"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:text="Ведите код из смс"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/keyy"
        style="@style/key"
        android:layout_width="298dp"
        android:layout_height="65dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.206" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_77"
                style="@style/NumButton"
                android:text="7" />

            <TextView
                android:id="@+id/num_88"
                style="@style/NumButton"
                android:text="8" />

            <TextView
                android:id="@+id/num_99"
                style="@style/NumButton"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_44"
                style="@style/NumButton"
                android:text="4" />

            <TextView
                android:id="@+id/num_55"
                style="@style/NumButton"
                android:text="5" />

            <TextView
                android:id="@+id/num_66"
                style="@style/NumButton"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_11"
                style="@style/NumButton"
                android:text="1" />

            <TextView
                android:id="@+id/num_22"
                style="@style/NumButton"
                android:text="2" />

            <TextView
                android:id="@+id/num_33"
                style="@style/NumButton"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backk"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_res"
                android:alpha="0.9"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"

                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/num_00"
                style="@style/NumButton"
                android:text="0" />

            <ImageView
                android:id="@+id/Okk"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:src="@drawable/ic_ok"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"

                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>