<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">#fdbc2a</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/rep</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily" tools:ignore="DuplicateDefinition">@font/rep</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:alpha">0.9</item>
    </style>
    <style name="key">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/odr</item>
        <item name="fontFamily">@font/rep</item>

    </style>
    <style name="Text2">
        <item name="fontFamily">@font/rep</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#FFF</item>
        <item name="fontFamily">@font/rep</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textSize">25sp</item>

    </style>
    <style name="erroe">
        <item name="fontFamily">@font/rep</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#e75700</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/odr2</item>
    </style>

    <style name="comp">
        <item name="fontFamily">@font/rep</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/odr3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
